{
  "name": "kirby-browsersync-tailwind-demo",
  "version": "1.0.0",
  "description": "My Kirby Browsersync + Tailwind Demo",
  "scripts": {
    "serve": "concurrently \"npm run serve-php\" \"npm run sync\" \"npm run watch\"",
    "serve-php": "php -S localhost:8000 kirby/router.php",
    "sync": "node browsersync.js",
    "watch": "npx tailwindcss -i ./src/input.css -o ./assets/css/output.css --content './site/**/*.php' -w",
    "build": "npx tailwindcss -i ./src/input.css -o ./assets/css/output.css --content './site/**/*.php' -m"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "browser-sync": "^3.0.4",
    "concurrently": "^8.2.2",
    "tailwindcss": "^4.1.4"
  },
  "browserSync": {
    "proxy": "localhost:8000",
    "watch": [
      "assets",
      "content",
      "site/snippets",
      "site/templates",
      "site/blueprints",
      "site/languages"
    ],
    "ignore": [
      "**/.lock",
      "**/.DS_Store"
    ]
  }
}
